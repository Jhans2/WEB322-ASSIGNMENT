<div class="hi">
  <div class="login-page">
    <div class="form">
      <div class="login">
        <div class="login-header">
          <h3>LOGIN</h3>
          <p>Please enter your credentials to login.</p>
        </div>
      </div>
      {{#each errors}}
        <p style="color: red">{{this}}</p>
      {{/each}}
      <form class="login-form" method="post" action="/Sign-in">
        <input
          type="email"
          placeholder="Username"
          id="email"
          name="email"
          value="{{values.email}}"
        />
        {{#if validation.email}}
          <span style="color: red;">{{validation.email}}</span><br />
        {{/if}}
        <input
          type="password"
          placeholder="Password"
          id="password"
          name="password"
          value="{{values.password}}"
        />
        {{#if validation.password}}
          <span style="color: red;">{{validation.password}}</span><br />
        {{/if}}
        <div style="display:flex; flex-direction:row;padding:0px 50px 0px 0px">
          <input type="radio" id="customer" name="Login_type" value="customer" checked/> Customer
          <input type="radio" id="clerk" name="Login_type" value="clerk" />Clerk
        </div>
        <br />
        <button value="Sign-in" type="submit">login</button>
        <p class="message">Not registered?
          <a href="/Registration">Create an account</a></p>
      </form>
    </div>
  </div>
</div>