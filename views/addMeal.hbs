{{#if clerk}}
<div class="hi">
  <div class="login-page">
    <div class="form">
      <div class="login">
        <div class="login-header">
          <h3>Add New Meal</h3>
          <p>Please enter meal details to add.</p>
        </div>
      </div>
      <form class="login-form" method="post" action="/addMeal" enctype="multipart/form-data">
        <input
          type="text"
          placeholder="Meal Name"
          id="Name"
          name="Name"
          value="{{values.Name}}"
        />
        {{#if validation.Name}}
          <span style="color: red;">{{validation.Name}}</span><br />
        {{/if}}

        <input
          type="text"
          placeholder="Toppings"
          id="tName"
          name="tName"
          value="{{values.tName}}"
        />
        {{#if validation.tName}}
          <span style="color: red;">{{validation.tName}}</span><br />
        {{/if}}

        <textarea name="des" placeholder="Meal Description" id="des">{{values.des}}</textarea>
        {{#if validation.des}}
          <span style="color: red;">{{validation.des}}</span><br />
        {{/if}}

        <input
          type="text"
          placeholder="Category Type"
          name="type"
          list="type"
          value="{{values.type}}"
        />
        {{#if validation.type}}
          <span style="color: red;">{{validation.type}}</span><br />
        {{/if}}
         <datalist id="type">  
          <option value="Chinese Meals">    
          <option value="Classic Meals">  
        </datalist>  

        <input type="text" placeholder="Price: $" id="price" name="price"id="price" value="{{values.price}}"/>
        {{#if validation.price}}
          <span style="color: red;">{{validation.price}}</span><br />
        {{/if}}

        <input
          type="text"
          placeholder="Cooking Time"
          id="time"
          name="time"
          value="{{values.time}}"
        />
        {{#if validation.time}}
          <span style="color: red;">{{validation.time}}</span><br />
        {{/if}}

        <input
          type="text"
          placeholder="Total Servings"
          id="tServings"
          name="tServings"
          value="{{values.tServings}}"
        />
        {{#if validation.tServings}}
          <span style="color: red;">{{validation.tServings}}</span><br />
        {{/if}}

        <input
          type="text"
          placeholder="Calories Per Serving"
          id="pServings"
          name="pServings"
          value="{{values.pServings}}"
        />
        {{#if validation.pServings}}
          <span style="color: red;">{{validation.pServings}}</span><br />
        {{/if}}

        <input
          name="top"
          type="text"
          placeholder="Is it a Top Meal?"
          list="top"
          value="{{values.top}}"
        />
         {{#if validation.top}}
          <span style="color: red;">{{validation.top}}</span><br />
        {{/if}}
     <datalist id="top">  
      <option value="true">  
     <option value="false">    
    </datalist>  


    {{#if validation.ext}}
<p style="color: red">{{validation.ext}}</p>
  {{/if}}
        <input type="file" name="profilePic" id="profilePic" required/><br /><br />

        <button value="Registration" type="submit">Add Meal</button>

      </form>
    </div>
  </div>
</div>
{{else}}
<div style="text-align: center;" class="ye">
  <h1 >You are a cutomer!!!!<br>You do not have access to this page</h1>
  <img src="./images/error.jpg">
</div>>
{{/if}} 